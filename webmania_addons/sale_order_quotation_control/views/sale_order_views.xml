
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.create.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Control 'Create Quotation' button based on security group -->
            <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                <attribute name="groups">sale_order_quotation_control.group_sale_order_create_quotation</attribute>
            </xpath>
        </field>
    </record>
</odoo>
