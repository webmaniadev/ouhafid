
<odoo>
   <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">user.has_group('base.group_sale_manager')</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_orders" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'allow_sale_order_creation': user.allow_sale_order_creation}</field>
    </record>
</odoo>
