<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_register_inherit_view_form" model="ir.ui.view" >
        <field name="name">account.payment.register.inherit.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group string="Cheuqe Details">
                    <group name="cheq_num">
                        <field name="cheq_num"/>
                    </group>
                    <group name="cheq_img">
                        <field name="cheq_img" widget="image" options="{&quot;size&quot;: [120, 200]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>