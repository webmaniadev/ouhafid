<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="options_vertical_slider" name="Theme Alan Options Vertical Slider" inherit_id="website.assets_frontend" active="False" priority="20">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/theme_alan/static/src/scss/multi_image_vertical.scss" />
            <script type="text/javascript" src="/theme_alan/static/src/js/multi_image_vertical.js"></script>
        </xpath>
    </template>
    <template id="options_horizontal_slider" name="Theme Alan Options Horizontal Slider" inherit_id="website.assets_frontend" active="True" priority="20">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/theme_alan/static/src/scss/multi_image_horizontal.scss" />
            <script type="text/javascript" src="/theme_alan/static/src/js/multi_image_horizontal.js"></script>
        </xpath>
    </template>
    <template id="image_zoomer" name="Theme Alan Zoomer" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script t-if="request.website.viewref('website_sale.product_picture_magnify').active" type="text/javascript" src="/theme_alan/static/src/js/image_zoomer.js"/>
        </xpath>
    </template>
</odoo>
