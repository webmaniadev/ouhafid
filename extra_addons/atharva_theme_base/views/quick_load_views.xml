<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_infinity_scrolling" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.scrolling</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="after">
                <h2>Infinite Shop Page Scrolling</h2>
                 <div class="row mt16 o_settings_container" >
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane">
                            <field name="shop_infinite_scrolling"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="shop_infinite_scrolling"/>
                            <div class="text-muted">
                                Activate Quick Products Loading
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>